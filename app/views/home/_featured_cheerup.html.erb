<div class="previous">
  <% if @page-1 >= 0 %>
    <%= link_to home_path(page: @page-1) do %>
      &#9664;
    <% end %>
  <% end %>

</div>

<div class="cheerup">
  
  <div>
    <%= render partial: "/cheerups/cheerup", locals: { type: "feature", cheerup: @cheerup } %>
  </div>

</div>

<div class="next">
  <% if @page+1 <= @new_cheerups.count %>
    <%= link_to home_path(page: @page+1) do %>
      &#9654;
    <% end %>
  <% end %>
</div>

