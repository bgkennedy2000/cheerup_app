
<div>
  <p>Username:<%= @cheerup.user.username %></p>
</div>

<%= render @cheerup %>

<% if current_user && current_user.provider == "twitter" && current_user.id == @cheerup.user.id %>

  <%= form_for :tweet, url: tweets_path, method: :post do |f| %>
    <%= f.hidden_field :cheerup_id, value: @cheerup.id %>
    <%= f.submit "Send Tweet" %>
  <% end %>

<% end %>

<% if can? :update, @cheerup %>
  <p><%= link_to 'Edit Cheerup', edit_cheerup_path(@cheerup) %></p>
<% end %> 


<p><%= link_to 'Back', root_path %></p>
