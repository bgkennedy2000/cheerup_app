<div class="cheerup">
  <div class="display">
    <%= link_to cheerup do %>
      <% if cheerup.image_url.present? %>
        <img class="hotlink" src="<%= cheerup.calculated_image_url %>">
      <% else cheerup.image_file_url.present? %>
        <img class="uploaded" src="<%= cheerup.calculated_image_url %>">
      <% end %>
    <% end %>
  </div>
  <div class="rate">
    <%= button_to "flag", feedbacks_path(cheerup_id: cheerup.id, kind: "flag"), class: "flag" %>
    <%= button_to "like", feedbacks_path(cheerup_id: cheerup.id, kind: "like"), class: "like" %>
    Rating: <%= cheerup.rating %>  
  </div>
</div>


